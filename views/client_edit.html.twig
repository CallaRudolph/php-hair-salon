<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Edit the client</title>
    </head>
    <body>
        <div class='container'>
            <h1>Edit {{ client.getClientName }}</h1>
            <br>
            <form action='/clients/{{ client.getId }}' method='post'>
              <input name='_method' type='hidden' value='patch'>
              <label for='name'>Rename {{ client.getClientName }} if yr feeling saucy:</label><br>
              <input id='client_name' name='client_name' type='text' placeholder='New name for {{ client.getClientName }}' required><br><br>
              <label for='name'>Update {{ client.getClientName }}'s phone number:</label><br>
              <input id='phone_number' name='phone_number' type='text' placeholder='New # for {{ client.getClientName }}' required>
              <br><br>
              <button type='submit' class='btn-success'>Update Client</button>
            </form>

            <form action='/clients/{{ client.getId }}' method='post'>
                <input name='_method' type='hidden' value='delete'>

                <button type='submit' class='btn-danger'>Forever remove this nasty client</button>
            </form>
            <br>
        </div>
    </body>
</html>
