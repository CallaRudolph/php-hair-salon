<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Edit the client</title>
    </head>
    <body>
        <div class='container'>
            <h1>Edit {{ client.getClientName }}</h1>
            <br>
            <form action="/clients/{{ client.getId }}" method="post">
              <input name="_method" type="hidden" value="patch">
              <label for="name">Rename your client (be nice):</label><br>
              <input id="client_name" name="client_name" type="text">
              <label for="name">Change the client's phone number:</label><br>
              <input id="phone_number" name="phone_number" type="text">

              <button type="submit">Update Client</button>
            </form>
            <br>
        </div>
    </body>
</html>
