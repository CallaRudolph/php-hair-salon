<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Edit the stylist</title>
    </head>
    <body>
        <div class='container'>
            <h1>Edit {{ stylist.getName }}</h1>
            <br>
            <form action="/stylists/{{ stylist.getId }}" method="post">
              <input name="_method" type="hidden" value="patch">
              <label for="name">Rename your stylist (be nice):</label><br>
              <input id="name" name="name" type="text">

              <button type="submit">Update</button>
            </form>
            <br>
            <form action="/stylists/{{ stylist.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit" class="btn-danger">Fire this stylist</button>
            </form>
        </div>
    </body>
</html>
